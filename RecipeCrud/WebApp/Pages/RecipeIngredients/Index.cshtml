@model WebApp.Pages.RecipeIngredients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RecipeIngredient[0].Recipe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeIngredient[0].Ingredient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeIngredient[0].Amount)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.RecipeIngredient)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe!.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.RecipeId">Edit</a> |
                <a asp-page="Details" asp-route-id="@item.RecipeId">Details</a> |
                <a asp-page="Delete" asp-route-id="@item.RecipeId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>