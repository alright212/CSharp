@page
@model WebApp.Pages.Comments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Comments</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].CommentText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].ParentComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommentText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @item.ParentComment?.CommentText
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book!.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
